<div class="container-fluid">
	<div class="row">
	    <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3">
	        <div class="panel panel-default">
	            <div class="panel-heading">
	                Registraton Form
	            </div>
	            <div class="panel-body">
	                <div class="row">
	                    <div class="col-lg-12">
	                    	<% if (message) { %>
	                    	<div class="alert alert-info alert-dismissible fade in" role="alert">
	                    	    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
	                    	    <%= message %>
	                    	</div>
	                    	<% } %>
	                        <form action="" role="form" method="post">
	                        	<div class="form-group">
	                                <label>Name</label>
	                                <input class="form-control" name="name" required="true" type="text" placeholder="Enter your name">
	                            </div>

	                            <div class="form-group">
	                                <label>Email</label>
	                                <input class="form-control" name="email" required="true" type="email" placeholder="Enter your email">
	                                <span class="help-block text-danger"><% if (errors.email) { %><%= errors.email.message %><% } %></span>
	                            </div>

	                            <div class="form-group">
	                                <label>Passowrd</label>
	                                <input class="form-control" name="password" required="true" type="password" placeholder="Enter your password">
	                                <span class="help-block text-danger"><% if (errors.password) { %><%= errors.password.message %><% } %></span>
	                            </div>

	                            <div class="form-group">
	                                <label>Repeat Passowrd</label>
	                                <input class="form-control" name="repeatPass" required="true" type="password" placeholder="Repeat the password">
	                            </div>

	                            <button type="submit" class="btn btn-primary"><i class="fa fa-send"></i> Submit</button>
	                            <a href="/auth/login.html" class="btn btn-default"><i class="fa fa-user"></i> Login</a>
	                        </form>
	                    </div>
	                    
	                </div>
	                <!-- /.row (nested) -->
	            </div>
	            <!-- /.panel-body -->
	        </div>
	        <!-- /.panel -->
	    </div>
	</div>
</div>