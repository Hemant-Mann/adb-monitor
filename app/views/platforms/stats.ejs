<!-- Morris Charts CSS -->
<link href="/css/morris.css" rel="stylesheet">
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">Stats: <%= platform.domain %></h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-bar-chart-o fa-fw"></i> Chart
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div id="morris-area-chart"></div>
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        Visitor Stats
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Visitors</th>
                                        <th>Allowing</th>
                                        <th>Blocking</th>
                                        <th>Pageviews</th>
                                        <th>Pages / Visit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><%= total.visitors %></td>
                                        <td><%= total.allowing %></td>
                                        <td><%= total.blocking %></td>
                                        <td><%= total.pageviews %></td>
                                        <td><%= total.pageviews / total.visitors %></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>

            </div>
        </div>
    </div>
</div>
<script src="/js/raphael-min.js"></script>
<script src="/js/morris.min.js"></script>
