<%- include modals/code.html %>
<div class="row">
    <div class="col-sm-6 col-lg-3">
        <div class="widget-simple-chart text-right card-box">
            <h3 class="text-primary counter">5685</h3>
            <p class="text-muted text-nowrap">Total PageViews</p>
        </div>
    </div>

    <div class="col-sm-6 col-lg-3">
        <div class="widget-simple-chart text-right card-box">
            <h3 class="text-success counter">2562</h3>
            <p class="text-muted text-nowrap">Allowing Ads</p>
        </div>
    </div>

    <div class="col-sm-6 col-lg-3">
        <div class="widget-simple-chart text-right card-box">
            <h3 class="text-danger counter">5685</h3>
            <p class="text-muted text-nowrap">Blocking Ads</p>
        </div>
    </div>

    <div class="col-sm-6 col-lg-3">
        <div class="widget-simple-chart text-right card-box">
            <h3 class="text-info counter">5685</h3>
            <p class="text-muted text-nowrap">Percent</p>
        </div>
    </div>
</div>
<!-- end row -->

<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <h4 class="text-dark header-title m-t-0 text-center">Your Platforms</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Domain</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (i in platforms) { %>
                        <tr>
                            <td><%= platforms[i].name %></td>
                            <td><%= platforms[i].domain %></td>

                            <td>
                                <% if (platforms[i].live) { %>
                                <span class="label label-success">Active</span>
                                <% } else { %>
                                <span class="label label-warning">Disabled</span>
                                <% } %>
                            </td>
                            <td>
                                <a href="/platforms/<%= platforms[i]._id %>.html" class="btn btn-primary btn-xs"><i class="fa fa-bar-chart"></i> Stats</a>

                                <a href="platforms/getCode" data-id="<%= platforms[i]._id %>" class="getCode btn btn-default btn-xs"><i class="fa fa-code"></i> Get Code</a>

                                <% if (platforms[i].live) { %>
                                <a href="platforms/<%= platforms[i]._id %>" data-update='<%- JSON.stringify({live: 0}) %>' class="update btn btn-warning btn-xs"><i class="fa fa-ban"></i> Disable</a>
                                <% } else { %>
                                <a href="platforms/<%= platforms[i]._id %>" data-update='<%- JSON.stringify({live: 1}) %>' class="update btn btn-success btn-xs"><i class="fa fa-check"></i> Enable</a>
                                <% } %>
                                <a href="platforms/<%= platforms[i]._id %>" data-message="Are you sure you want to delete this platform?" class="delete btn btn-danger btn-xs"><i class="fa fa-trash"></i> Delete</a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- end col -8 -->

</div>
<!-- end row -->
