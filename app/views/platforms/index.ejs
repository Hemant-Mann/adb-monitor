<%- include modals/code.html %>
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Dashboard</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Platforms
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <% if (message) { %>
                        <div class="alert alert-info alert-dismissible fade in" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                            <%- message %>
                        </div>
                        <% } %>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th># ID</th>
                                        <th>Name</th>
                                        <th>Domain</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (i in platforms) { %>
                                    <tr>
                                        <td><%= platforms[i]._id %></td>
                                        <td><%= platforms[i].name %></td>
                                        <td><%= platforms[i].domain %></td>

                                        <td>
                                            <% if (platforms[i].live) { %>
                                            <span class="label label-success">Active</span>
                                            <% } else { %>
                                            <span class="label label-warning">Disabled</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/platforms/<%= platforms[i]._id %>" class="btn btn-primary btn-xs"><i class="fa fa-code"></i> Stats</a>

                                            <a href="platforms/getCode" data-id="<%= platforms[i]._id %>" class="getCode btn btn-default btn-xs"><i class="fa fa-code"></i> Get Code</a>

                                            <% if (platforms[i].live) { %>
                                            <a href="platforms/<%= platforms[i]._id %>" data-update='<%- JSON.stringify({live: 0}) %>' class="update btn btn-warning btn-xs"><i class="fa fa-ban"></i> Disable</a>
                                            <% } else { %>
                                            <a href="platforms/<%= platforms[i]._id %>" data-update='<%- JSON.stringify({live: 1}) %>' class="update btn btn-success btn-xs"><i class="fa fa-check"></i> Enable</a>
                                            <% } %>
                                            <a href="platforms/<%= platforms[i]._id %>" data-message="Are you sure you want to delete this platform?" class="delete btn btn-danger btn-xs"><i class="fa fa-trash"></i> Delete</a>
                                        </td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>

                <a href="/platforms/create" class="btn btn-lg btn-primary"><i class="fa fa-plus"></i> Add More</a>
                <!-- /.panel -->
            </div>
        </div>
    </div>
</div>