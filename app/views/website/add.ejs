<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
                <h2 class="page-header">Add Platform</h2>
            </div>
		</div>
		<div class="row">
		    <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3">
		        <div class="panel panel-default">
		            <div class="panel-heading">
		                Add Platform Form
		            </div>
		            <div class="panel-body">
		                <div class="row">
		                    <div class="col-lg-12">
		                    	<% if (message) { %>
		                    	<div class="alert alert-info alert-dismissible fade in" role="alert">
		                    	    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
		                    	    <%= message %>
		                    	</div>
		                    	<% } %>
		                        <form action="" role="form" method="post">

		                            <div class="form-group">
		                                <label>Name</label>
		                                <input class="form-control" name="name" required="true" type="text" placeholder="Enter website alias">
		                            </div>

		                            <div class="form-group">
		                                <label>Domain</label>
		                                <input class="form-control" name="domain" required="true" type="text" placeholder="Enter the domain">
		                            </div>

		                            <button type="submit" class="btn btn-primary"><i class="fa fa-send"></i> Submit</button>
		                            <a href="/dashboard.html" class="btn btn-danger"><i class="fa fa-times"></i> Cancel</a>
		                        </form>
		                    </div>
		                    
		                </div>
		                <!-- /.row (nested) -->
		            </div>
		            <!-- /.panel-body -->
		        </div>
		        <!-- /.panel -->
		    </div>
		</div>
	</div>
</div>